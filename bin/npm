#!/usr/bin/env bash

#install npm
run_npm() {
	
	# Sets your user account as the owner of the /usr/local directory to avoid managing packages with sudo
	sudo chown -R $USER /usr/local
	
	nvm install 10 --lts
	nvm install 12 --lts

	npm update

	npm i -g expo-cli
	npm i -g localtunnel
	npm i -g yarn
	npm i -g knex
	
}
